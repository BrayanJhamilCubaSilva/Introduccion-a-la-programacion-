/*Descripción: Calcular el peso ideal de una persona*/
/*Entrada    : Formula del peso ideal y la altura de la persona */
/*Salida     : El peso ideal de un hombre o una mujer */
/******************************************************************************************/
#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{int sex;
 float h, peso_ideal;
 printf("\tCalculo del peso ideal de una persona\n");
 printf("\t\=====================================n");
 printf("\tIngrese el sexo de una persona:\n");
 printf("\t 1.- Para hombres\n")
 printf("\t 2.- Para mujeres\n");
 scanf_s("%d", & sex);
 if(sex == 1)
 {printf("\tIngrese altura:\n");
  scanf_s("%f", & h);
  peso_ideal = (72.7*h)-58;
  printf("Su peso ideal es: %f kilos",peso_ideal);
 }
 if(sex == 2)
 {printf("\tIngrese altura:\n");
  scanf_s("%f", & h);
  peso_ideal = (62.1*h)-44.7;
  printf("Su peso ideal es: %f kilos",peso_ideal);
 }
 _getch();
}
